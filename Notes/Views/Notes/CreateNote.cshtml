@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Notes.Domain.Models
@model Notes.Domain.Models.NoteViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Создание заметки";
    var note = (NoteViewModel) ViewData["Note"];
}

@section Styles{
    <link href="~/css/FormStyles.css" rel="stylesheet"/>
}

@if (note != null)

{
    <form class="form" method="post" asp-action="UpdateNote" asp-route-id="@note.Id">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-item-container">
            <div class="form-label">Введите Заголовок</div>
            <input class="form-input" type="text" name="Title" value="@note.Title"/>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-item-container">
            <div class="form-label">Введите текст</div>
            <textarea class="form-input form-textarea" name="Text">@note.Text</textarea>
            <span asp-validation-for="Text"></span>
        </div>
        <div class="form-item-container">
            <input type="submit" class="form-input" value="Сохранить">
        </div>
    </form>
}
else
{
    <form class="form" method="post" asp-action="CreateNote">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-item-container">
            <div class="form-label">Введите Заголовок</div>
            <input class="form-input" type="text" name="Title"/>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-item-container">
            <div class="form-label">Введите текст</div>
            <textarea class="form-input form-textarea" name="Text"></textarea>
            <span asp-validation-for="Text"></span>
        </div>
        <div class="form-item-container">
            <input type="submit" class="form-input" value="Создать">
        </div>
    </form>
}