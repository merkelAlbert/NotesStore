@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Notes.Domain.Models
@model RegisterViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Регистрация";
}

@section Styles{
    <link href="~/css/FormStyles.css" rel="stylesheet"/>
}

<form class="form" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-item-container">
        <div class="form-label">Введите Логин</div>
        <input class="form-input" type="text" name="UserName"/>
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-item-container">
        <div class="form-label">Введите email</div>
        <input class="form-input" type="email" name="Email"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-item-container">
        <div class="form-label">Введите Пароль</div>
        <input class="form-input" type="password" name="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-item-container">
        <div class="form-label">Повторите Пароль</div>
        <input class="form-input" type="password" name="PasswordConfirm"/>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>

    <div class="form-item-container">
        <input class="form-input" type="submit" value="Зарегистрироваться"/>
    </div>
</form>